{
  "name": "rest-shield",
  "version": "1.0.0",
  "description": "RestAPI for creating shield.io badges",
  "main": "server.ts",
  "scripts": {
    "start": "docker compose -f database/pocketbase.yml up -d && tsc && node dist/server.js",
    "dev": "cp ./config/initial_data.db ./database/data/data.db && docker compose -f database/pocketbase.yml up -d && node init.mjs && tsc && DATABASE=$(jq '.dev_database' config/rest-shield-config.json) && REST_SHIELD_PORT=$(jq '.dev_port' config/rest-shield-config.json) node dist/server.js",
    "test": "nyc --reporter=json-summary mocha --require ts-node/register --exit --watch-extensions ts './test/**/*.ts'",
    "posttest": "jq -n --arg cov $(jq -r '.total.lines.pct' coverage/coverage-summary.json) '{\"value\": $cov}' > coverage/coverage.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kesecode/rest-shield.git"
  },
  "keywords": [
    "rest",
    "api",
    "shieldio"
  ],
  "author": "David Weppler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kesecode/rest-shield/issues"
  },
  "homepage": "https://github.com/kesecode/rest-shield#readme",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "express": "^4.18.2",
    "firebase": "^9.17.1",
    "firebase-admin": "^11.5.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pocketbase": "^0.14.0",
    "sinon": "^15.0.1",
    "tslog": "^4.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.10",
    "chai": "^4.3.7",
    "eslint-config-airbnb-typescript": "^16.1.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.9.5"
  }
}
